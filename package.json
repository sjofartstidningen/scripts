{
  "name": "@sjofartstidningen/scripts",
  "version": "0.0.0-development",
  "description": "A set of useful scripts used around the project",
  "main": "dist/index.js",
  "repository": "https://github.com/sjofartstidningen/scripts",
  "author": "Sj√∂fartstidningen <info@sjofartstidningen.se>",
  "contributors": [
    "Adam Bergman <adam@fransvilhelm.com>"
  ],
  "license": "MIT",
  "private": false,
  "bin": {
    "sst-scripts": "./bin.js"
  },
  "files": [
    "dist",
    "bin.js"
  ],
  "scripts": {
    "start": "parcel watch src/index.js --target node",
    "build": "parcel build src/index.js --target node",
    "test": "echo \"No tests specified\" && exit 0",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "execa": "^1.0.0",
    "fs-extra": "^8.0.1",
    "inquirer": "^6.3.1",
    "lodash": "^4.17.11",
    "madge": "^4.0.1",
    "md5": "^2.2.1",
    "read-pkg-up": "^6.0.0",
    "replace-in-file": "^4.1.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "lint-staged": "^8.2.1",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "react-testing-library": "^8.0.1",
    "semantic-release": "^15.13.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{js,ts,jsx,tsx,json,md,yml,html}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
